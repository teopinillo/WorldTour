<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblRigth"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#4CAF50"
                android:fontFamily="sans-serif-light"
                android:text="@string/right"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lblWrong"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#C62828"
                android:fontFamily="sans-serif-light"
                android:text="@string/wrong"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="24sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which City is This?"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/imgCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                android:src="@drawable/florence1" />

        </LinearLayout>

        <!--next & prev photo button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnNext"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNextClicked"
                android:padding="2dp"
                android:text="@string/next"
                android:textSize="20sp" />

        </LinearLayout>

        <!--answer buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnOptionClicked"
                android:padding="8dp"
                android:tag="0"
                android:text="Button"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnOptionClicked"
                android:padding="8dp"
                android:tag="1"
                android:text="Button"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnOptionClicked"
                android:padding="8dp"

                android:tag="2"
                android:text="Button"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnOptionClicked"
                android:padding="8dp"
                android:tag="3"
                android:text="Button"
                android:textSize="20sp" />


        </LinearLayout>

        <!--next question button-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnNxtQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:onClick="btnNxtQuestionClicked"
                android:padding="4dp"
                android:text="@string/nxtquestion"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>